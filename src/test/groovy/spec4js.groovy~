import spock.lang.*import org.mozilla.javascript.*class Spec4Js extends Specification {    def context  def scope  def setupSpeck(){    ContextFactory.initGlobal(new ContextFactory())  }    def setup() {    context = ContextFactory.getGlobal().enterContext()    scope = context.initStandardObjects()    assert script, 'script is empty'    context.evaluateString(scope, script, "<inline>", 1, null)  }  def cleanup() {    context.exit()  }  def run(funcName, args){    def func = scope.get(funcName, null)    assert (func instanceof Function), "${funcName} is not function"    return func.call(context, scope, null, args)  }}